{% extends 'base.html.twig' %}

{% block title %}Hello Conway's Game of Life Fans!{% endblock %}

{% block body %}
    <style>
        html {
            font: 18px/1.5 sans-serif;
            text-align: center;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
        }

        pre {
            letter-spacing: 20px;
            padding-left: 20px;
            margin: 0 auto;
            display: inline-block;
            background: #F5F5F5;
        }

    </style>

    <div class="example-wrapper">
        <h1>Hello Conway's Game of Life Fans!</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button name="start" type="submit">Start</button>
        <button name="glider" type="button">Add Glider</button>
        <button name="stop" type="button">Stop</button>
        {{ form_end(form) }}
    </div>

    <div class="js-grid code">
            <pre>{{ grid|raw }}</pre>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="application/javascript">var lifecycles = {{ lifecycles }};</script>
    {{ parent() }}
    <script src="/js/update-image.js"></script>
{% endblock %}
