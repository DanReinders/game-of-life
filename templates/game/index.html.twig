{% extends 'base.html.twig' %}

{% block title %}Hello Conway's Game of Life Fans!{% endblock %}

{% block body %}
    <style>
        html {
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
        }

        .example-wrapper .code {
            background: #F5F5F5;
            padding: 2px 6px;
            text-align: center;
        }

        pre {
            letter-spacing: 20px;
            padding-left: 20px;
            margin: 0 auto;
            text-align: center;
        }

    </style>

    <div class="example-wrapper">
        <h1>Hello Conway's Game of Life Fans!</h1>
    </div>

    <div class="js-grid code">
            <pre>{{ grid }}</pre>
    </div>

{% endblock %}
